<%- include("head"); -%>
<div class="container">
    <h1>All Posts</h1>
    <div class="row" style="padding-bottom: 25px;">
        <%  posts.forEach(function(post){ %>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body postsCard">
                        <h5 class="card-title"><%=post.title%></h5>
                        <p class="card-text"><%=post.description%></p>
                        <a href="/posts/<%=post._id%>" class="card-link">Read More</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <a class="btn btn-primary"" href="/">Home</a>
</div>